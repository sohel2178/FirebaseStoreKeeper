<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.adec.firebasestorekeeper.Fragments.AddVoucher">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:background="@drawable/text_view_back"
                android:textColor="@color/colorPrimary"
                android:text="Voucher"
                android:textAllCaps="true"
                android:id="@+id/title"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/title">


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:id="@+id/calendar"
                        android:text="{fa-calendar}"/>

                    <com.adec.firebasestorekeeper.CustomView.MyEditText
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_toLeftOf="@+id/calendar"
                        android:layout_alignParentBottom="true"
                        android:inputType="text"
                        android:hint="Date"
                        android:focusable="false"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/date"/>

                </RelativeLayout>

                <com.adec.firebasestorekeeper.CustomView.MyEditText
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:hint="Voucher ID"
                    android:id="@+id/voucher_id"/>

                <com.adec.firebasestorekeeper.CustomView.MyEditText
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="textEmailAddress"
                    android:hint="Expenditure Head"
                    android:id="@+id/exp_head"/>

                <com.adec.firebasestorekeeper.CustomView.MyEditText
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:hint="Pay To"
                    android:id="@+id/pay_to"/>

                <com.adec.firebasestorekeeper.CustomView.MyEditText
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="numberDecimal"
                    android:hint="Amount"
                    android:id="@+id/amount"/>

                <com.adec.firebasestorekeeper.CustomView.MyEditText
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:hint="Payment Method"
                    android:id="@+id/payment_method"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--<ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/edit_text_background_deselect"
                        android:id="@+id/voucher_image"/>-->

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:id="@+id/attachment"
                        android:text="@string/icon_attachment"/>

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_marginRight="16dp"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_toLeftOf="@+id/attachment"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:id="@+id/camera"
                        android:text="@string/icon_camera"/>

                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_attachments">

                </android.support.v7.widget.RecyclerView>

                <com.adec.firebasestorekeeper.CustomView.MyEditText
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:hint="Remarks"
                    android:id="@+id/remarks"/>

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="add"
                    android:id="@+id/add"
                    android:backgroundTint="@color/my_color"
                    android:textColor="@color/text_color_white"/>

            </LinearLayout>




        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
