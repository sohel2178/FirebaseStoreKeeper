<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    tools:context="com.adec.firebasestorekeeper.Navigation.ProfileFragment">


    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:elevation="6dp"
        android:id="@+id/top"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:src="@drawable/close"
            android:clickable="true"
            android:id="@+id/close"
            android:background="@drawable/custom_bg"/>

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/tick"
            android:clickable="true"
            android:id="@+id/tick"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/custom_bg"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/top">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/profile_image"
            android:src="@drawable/placeholder"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Change Photo"
            android:layout_below="@+id/profile_image"
            android:id="@+id/change_image"
            android:layout_centerHorizontal="true"
            android:textColor="@color/my_color"
            android:textStyle="italic"
            android:padding="3dp"/>

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/person"
            android:id="@+id/icon_name"
            android:layout_below="@+id/change_image"
            android:padding="12dp"/>

        <com.adec.firebasestorekeeper.CustomView.MyEditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="-42dp"
            android:paddingLeft="48dp"
            android:textSize="12sp"
            android:id="@+id/name"
            android:layout_toRightOf="@+id/icon_name"
            android:layout_below="@+id/change_image"
            android:hint="Name"/>

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/my_mail"
            android:id="@+id/icon_email"
            android:layout_below="@+id/icon_name"
            android:padding="12dp"/>

        <com.adec.firebasestorekeeper.CustomView.MyEditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="-42dp"
            android:paddingLeft="48dp"
            android:textSize="12sp"
            android:id="@+id/email"
            android:layout_toRightOf="@+id/icon_email"
            android:layout_below="@+id/icon_name"
            android:hint="Email"/>

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/mobile"
            android:id="@+id/icon_contact"
            android:layout_below="@+id/icon_email"
            android:padding="12dp"/>

        <com.adec.firebasestorekeeper.CustomView.MyEditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="-42dp"
            android:paddingLeft="48dp"
            android:textSize="12sp"
            android:id="@+id/contact"
            android:layout_toRightOf="@+id/icon_contact"
            android:layout_below="@+id/icon_email"
            android:hint="Contact"/>

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/address"
            android:id="@+id/icon_address"
            android:layout_below="@+id/icon_contact"
            android:padding="12dp"/>

        <com.adec.firebasestorekeeper.CustomView.MyEditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="-42dp"
            android:paddingLeft="48dp"
            android:textSize="12sp"
            android:id="@+id/address"
            android:layout_toRightOf="@+id/icon_address"
            android:layout_below="@+id/icon_contact"
            android:hint="Address"/>


    </RelativeLayout>
</RelativeLayout>
