<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.adec.firebasestorekeeper.Navigation.AddCustomerFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <com.adec.firebasestorekeeper.CustomView.MyEditText
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:inputType="text"
               android:hint="Customer Name"
               android:id="@+id/name"/>

           <com.adec.firebasestorekeeper.CustomView.MyEditText
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:layout_below="@+id/name"
               android:inputType="textEmailAddress"
               android:hint="Email"
               android:id="@+id/email"/>

           <com.adec.firebasestorekeeper.CustomView.MyEditText
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:layout_below="@+id/email"
               android:inputType="text"
               android:hint="Address"
               android:id="@+id/address"/>

           <com.adec.firebasestorekeeper.CustomView.MyEditText
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:layout_below="@+id/address"
               android:inputType="text"
               android:hint="Contact"
               android:id="@+id/contact"/>

           <com.adec.firebasestorekeeper.CustomView.MyEditText
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:layout_below="@+id/contact"
               android:inputType="numberDecimal"
               android:hint="Opening Balance"
               android:id="@+id/opening_balance"/>

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/opening_balance"
               android:layout_marginTop="10dp"
               android:id="@+id/add"
               android:text="add"
               android:textColor="@color/text_color_white"
               android:backgroundTint="@color/my_color"/>
       </RelativeLayout>
   </ScrollView>

</FrameLayout>
