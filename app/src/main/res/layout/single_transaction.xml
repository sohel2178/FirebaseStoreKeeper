<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/custom_bg"
    android:padding="1dp"
    android:layout_marginBottom="1dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/money_bag"
        android:layout_marginRight="10dp"
        android:id="@+id/image"/>

    <TextView
        android:layout_toRightOf="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pay_to_or_customer"
        android:textSize="16sp"
        android:text="Customer Name"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payment_amount_or_total"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"/>

    <TextView
        android:layout_below="@+id/payment_amount_or_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voucher_memo_id"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"/>

    <TextView
        android:layout_below="@+id/voucher_memo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:textSize="10sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:src="@drawable/divider"/>



</RelativeLayout>