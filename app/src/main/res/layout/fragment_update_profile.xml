<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/text_color_white"
    tools:context="com.adec.firebasestorekeeper.Navigation.UpdateProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/placeholder"
        />

    <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="85dp"
        android:text="{fa-pencil}"
        android:gravity="center"
        android:id="@+id/camera"
        android:background="@drawable/blue_circle_back"
        android:textColor="@color/text_color_white"
        android:textSize="14sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:id="@+id/txt_name"
        android:text="Name"
        android:padding="2dp"
        android:textStyle="italic"/>

    <com.adec.firebasestorekeeper.CustomView.MyEditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/txt_name"
        android:inputType="text"
        android:id="@+id/name"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:id="@+id/txt_email"
        android:text="Email"
        android:padding="2dp"
        android:textStyle="italic"/>

    <com.adec.firebasestorekeeper.CustomView.MyEditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/txt_email"
        android:inputType="text"
        android:id="@+id/email"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:id="@+id/txt_contact"
        android:text="Contact"
        android:padding="2dp"
        android:textStyle="italic"/>

    <com.adec.firebasestorekeeper.CustomView.MyEditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/txt_contact"
        android:inputType="text"
        android:id="@+id/contact"
        android:layout_marginBottom="8dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact"
        android:id="@+id/txt_address"
        android:text="Address"
        android:padding="2dp"
        android:textStyle="italic"/>

    <com.adec.firebasestorekeeper.CustomView.MyEditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/txt_address"
        android:inputType="textImeMultiLine"
        android:gravity="top"
        android:id="@+id/address"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/address"
        android:text="update"
        android:textColor="@color/text_color_white"
        android:backgroundTint="@color/color_orange"/>

</RelativeLayout>
