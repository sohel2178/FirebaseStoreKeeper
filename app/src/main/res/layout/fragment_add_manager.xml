<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adec.firebasestorekeeper.Navigation.AddManagerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.adec.firebasestorekeeper.CustomView.MyEditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/title"
                android:inputType="text"
                android:hint="Name"
                android:id="@+id/name"/>

            <com.adec.firebasestorekeeper.CustomView.MyEditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/name"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:id="@+id/email"/>

            <com.adec.firebasestorekeeper.CustomView.MyEditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/email"
                android:inputType="text"
                android:hint="Address"
                android:id="@+id/address"/>

            <com.adec.firebasestorekeeper.CustomView.MyEditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/address"
                android:inputType="text"
                android:hint="Contact"
                android:id="@+id/contact"/>

            <com.adec.firebasestorekeeper.CustomView.MyEditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/contact"
                android:inputType="text"
                android:hint="NID"
                android:id="@+id/nid"/>

            <com.adec.firebasestorekeeper.CustomView.MyEditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/nid"
                android:inputType="text"
                android:hint="Referred By"
                android:id="@+id/referred_by"/>

            <com.adec.firebasestorekeeper.CustomView.MyEditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/referred_by"
                android:inputType="number"
                android:hint="Salary"
                android:id="@+id/salary"/>


        </RelativeLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add"
        android:text="add"
        android:layout_alignParentBottom="true"
        android:textColor="@color/text_color_white"
        android:alpha=".65"
        android:background="@color/colorPrimary"/>








</RelativeLayout>
